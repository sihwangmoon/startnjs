extends layout

block content
  h1= title
  div= error
  div
    form(action="/login", method="POST")
      p Username :
        input.form-control(name="username", type="text", placeholder="abc@gmail.com")
      p Password :
        input.form-control(name="password", type="password", placeholder="********")
      p
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Log in
  div
    form(action="/signup", method="POST")
      p
        input.form-control(name="email", type="text")
      p
        input.form-control(name="id", type="text", placeholder="abc@gmail.com")
      p
        input.form-control(name="password", type="password", placeholder="********")
      p
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign up